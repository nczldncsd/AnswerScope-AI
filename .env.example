FLASK_SECRET_KEY=change-this-to-a-long-random-secret

# AI provider keys (set at least one for Gemini).
GOOGLE_API_KEY=
GEMINI_API_KEY=
AI_MODEL=gemini-2.5-pro

# Search context source.
SERPAPI_KEY=
SERPAPI_MOCK=1

# Optional extraction limit tuning.
LLM_CLEAN_TEXT_MAX_CHARS=18000
